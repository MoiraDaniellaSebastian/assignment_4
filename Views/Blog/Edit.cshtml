@model assignment_4.Models.BlogPost

<h1>Edit Post - My Blog</h1>

<form asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" id="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" id="Summary" />
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" id="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" id="Submit">Update Post</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}